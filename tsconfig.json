{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "typedocOptions": {
    "entryPoints": ["yajsapi/*"],
    "exclude": ["**/*.spec.ts"],
    "out": "docs",
    "readme": "tutorial.md",
    "entryPointStrategy": "resolve",
    "excludePrivate": true,
    "categorizeByGroup": false,
    //"disableSources": true,
    //"name": "yajsapi API reference",
    "theme": "default",
//    "categorizeByGroup": true,
    //"mergeModulesRenameDefaults": true,
    //"excludeExternals": true,
    //"mergeModulesMergeMode": "module"
  },
  "exclude": ["dist", "node_modules", "examples", "tests", "cypress.config.ts"]
}
